@{
}
@model Payment
<h3 class="p-2 bg-primary text-white text-center">Create payment</h3>
<form asp-action="ConfirmPayment" class="p-2" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CardNumber">Card Number</label>
        <input asp-for="CardNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="CardCVV">Card CVV</label>
        <input asp-for="CardCVV" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="CardExpiryDate">Card expiry date</label>
        <input asp-for="CardExpiryDate" type="date" asp-format="{0:MM/yyyy}" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="Currency">Currency</label>
        <input asp-for="Currency" class="form-control" required/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Confirm</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>