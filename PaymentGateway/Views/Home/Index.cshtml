@model IEnumerable<Payment>
<h3 class="p-2 bg-primary text-white text-center">Payments</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col text-left font-weight-bold">Id</div>
        <div class="col text-left font-weight-bold">CVV</div>
        <div class="col text-left font-weight-bold">Expiry Date</div>
        <div class="col text-left font-weight-bold">Description</div>
        <div class="col text-left font-weight-bold">Amount</div>
        <div class="col text-left font-weight-bold">Currency</div>
        <div class="col text-left font-weight-bold">Payment Date</div>
        <div class="col text-left font-weight-bold">Transaction Id</div>
        <div class="col text-left font-weight-bold">Masked card number</div>
        <div class="col text-left font-weight-bold">Result</div>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col text-center p-2">No Data</div>
        </div>
    }
    else
    {
        @foreach (Payment payment in Model)
        {
        <div class="row p-2">
            <div class="col text-left">@payment.Id</div>
            <div class="col text-left">@payment.CardCVV</div>
            <div class="col text-left">@payment.CardExpiryDate.ToString("MM/yyyy")</div>
            <div class="col text-left">@payment.Description</div>
            <div class="col text-left">@payment.Amount</div>
            <div class="col text-left">@payment.Currency</div>
            <div class="col text-left">@payment.PaymentDate</div>
            <div class="col text-left">@payment.TransactionId</div>
            <div class="col text-left">@payment.MaskedCardNumber</div>
            <div class="col text-left">@((StatusCode)payment.Result)</div>
        </div>
        }
    }
    <div class="row text-center p-2"><a asp-action="CreatePayment" class="btn bg-primary text-white">Create a payment</a></div>
</div>