@model IEnumerable<Payment>
<h3 class="p-2 bg-primary text-white text-center">Payments</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-1 font-weight-bold">Id</div>
        <div class="col font-weight-bold">Number</div>
        <div class="col font-weight-bold">CVV</div>
        <div class="col font-weight-bold">Expiry Date</div>
        <div class="col font-weight-bold">Amount</div>
        <div class="col font-weight-bold">Currency</div>
        <div class="col font-weight-bold">Payment Date</div>
        <div class="col font-weight-bold">Transaction Id</div>
        <div class="col font-weight-bold">Masked card number</div>
        <div class="col font-weight-bold">Result</div>
        <div class="col"></div>
    </div>
    <form asp-action="MakePayment" method="post">
        <div class="row p-2">
            <div class="col-1"></div>
            <div class="col"><input name="CardNumber" class="form-control" /></div>
            <div class="col"><input name="CardCVV" class="form-control" /></div>
            <div class="col"><input name="CardExpiryDate" class="form-control" /></div>
            <div class="col"><input name="Amount" class="form-control" /></div>
            <div class="col"><input name="Currency" class="form-control" /></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col text-center p-2">No Data</div>
        </div>
    }
    else
    {
        @foreach (Payment payment in Model)
        {
        <div class="row p-2">
            <div class="col-1">@payment.Id</div>
            <div class="col"></div>
            <div class="col">@payment.CardCVV</div>
            <div class="col text-right">@payment.CardExpiryDate</div>
            <div class="col">@payment.Amount</div>
            <div class="col">@payment.Currency</div>
            <div class="col">@payment.PaymentDate</div>
            <div class="col">@payment.TransactionId</div>
            <div class="col">@payment.MaskedCardNumber</div>
            <div class="col">@((StatusCode)payment.Result)</div>
            <div class="col"></div>
        </div>
        }
    }
</div>